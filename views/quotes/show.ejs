<%- include('../partials/header') %>

  <main class="px-4">

    <section id="quoteDisplay" class="mx-auto w-75 pb-4">
      <div class="text-center">
        <p class="display-4" style="margin-block-start: 2em;"><q>
            <%= thisQuoteDoc.content %>
          </q></p>
        <p class="lead">&ndash; <%= thisQuoteDoc.author %>
        </p>
      </div>
      <div class="mt-4 row offset-2">
        <p class="col-sm-4 mb-0 mb-sm-2">Added:</p>
        <p class="col-sm-8">
          <%= thisQuoteDoc.createdAt %>
        </p>
        <p class="col-sm-4 mb-0 mb-sm-2">Last updated:</p>
        <p class="col-sm-8 mb-0 mb-sm-2">
          <%= thisQuoteDoc.updatedAt %>
        </p>
        <p class="col-sm-4 text-secondary" style="margin-top: -.5em;">Need to <a class="link-offset-3-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover" href="/quotes/<%= thisQuoteDoc._id%>/edit">edit
              this quote</a>?</p>
      </div>
    </section>

    <!-- link to form for 'edit' action -->

    <h3 class="text-center pt-4 border-top">Add some context</h3>


    <form action="/quotes/<%= thisQuoteDoc._id %>/annotations" method="POST" style="position: relative">

      <div class="row mt-3">
        <label for="whereBox" class="offset-2 col-sm-5 col-form-label">Where were you when you decided to add
          this?</label>
        <div class="col-sm-5">
          <input type="text" class="form-control" id="whereBox" placeholder="" name="where"
            value="<%= thisQuoteDoc.userAnnotations.where %>">
        </div>
      </div>
      <div class="row mt-3">
        <label for="whyBox" class="offset-2 col-sm-5 col-form-label">Why are you adding it?</label>
        <div class="col-sm-5">
          <input type="text" class="form-control" id="whyBox" placeholder="" name="where"
            value="<%= thisQuoteDoc.userAnnotations.why %>">
        </div>
      </div>

      <button class="btn btn-outline-primary d-block mx-auto w-50 my-4" style="max-width: 15em;" type="submit">
        Add this annotation</button>
    </form>

    <section class="text-center">

      <h3 class="py-4 border-top">Change your mind?</h3>
      <p>(This is permanent. It will also delete all your annotations about this quote.)</p>
      <form action="/quotes/<%= thisQuoteDoc._id%>?_method=DELETE" method="POST">
        <button class="btn btn-outline-danger d-block mx-auto w-50 my-4" style="max-width: 15em;" type="submit">
          Delete this quote</button>
      </form>
    </section>

    <%- include('../partials/footer') %>