<%- include('../partials/header') %>

<main class="px-4">


<!-- <h2>Add a quote to your book</h2> -->

<form action="/quotes" method="POST" class="col-8 offset-2">
  

  <div class="row mt-3">
    <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg">Quote</label>
    <div class="col-sm-10">
      <input type="text" class="form-control form-control-lg" id="colFormLabelLg" 
      placeholder=""
      name="content">
    </div>
  </div>
  
  <div class="row mt-3">
    <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg">Author</label>
    <div class="col-sm-5">
      <input 
        type="email" 
        class="form-control" 
        id="colFormLabel" 
        placeholder=""
        name="author">
    </div>
  </div>
  
  <br />
  
  <button 
    class="btn btn-outline-primary btn-lg d-block mx-auto w-50"
    style="max-width: 10em;"
    type="submit">
    Remember this</button>
</form>

